                                        <GradientStop Color="#FFCC0707" Offset="0.228" />
                                        <GradientStop Color="#FF830000" Offset="0.849" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <Border x:Name="PressedElement" CornerRadius="2" Opacity="0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF900000" Offset="0.31" />
