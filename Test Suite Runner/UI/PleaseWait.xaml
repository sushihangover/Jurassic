<Page x:Class="Test_Suite_Runner.UI.PleaseWaitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
      FontFamily="Calibri" FontSize="16"
      Loaded="Form_Loaded"
      Title="Test Suite Runner">

    <Grid>
        <!-- Small header -->
        <Grid>
            <Rectangle VerticalAlignment="Top" Height="65">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FAFCFF" Offset="0" />
                        <GradientStop Color="#D5EDFF" Offset="1" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Line X1="0" Y1="65.5" X2="100000" Y2="65.5" Stroke="#0094FF" StrokeThickness="2" />
            <Image HorizontalAlignment="Center" VerticalAlignment="Top" Source="..\Assets\Header Small.png" Stretch="None" />
        </Grid>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
            Scanning for script files... please wait
        </TextBlock>
    </Grid>
</Page>
